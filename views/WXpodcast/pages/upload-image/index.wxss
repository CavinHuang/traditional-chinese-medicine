.container {
  min-height: 100vh;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}

.upload-form-wrapper {
  display: flex;
  flex-wrap: nowrap;
  flex-direction: column;
  margin: 0 32rpx;
  justify-content: center;
  align-items: center;
}

.upload-form-wrapper input {
  flex: 1;
  border: 1rpx solid #5d3d21;
  border-radius: 8px;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 10rpx;
  min-height: auto;
  width: 100%;
}
.form-wrapper button {
  width: 140rpx;
  height: 86rpx;
  line-height: 86rpx;
  font-size: 32rpx;
  background-color: #5d3d21;
  border-radius: 0 8px 8px 0;
}

.image-wrapper {
  display: grid;
  grid-template-columns: repeat(3, 188rpx);
  grid-gap: 32rpx;
  grid-auto-flow: row dense;
  width: 100%;
  grid-auto-rows: 188rpx;
  margin-top: 32rpx;
}

.image-wrapper .image-item {
  --bezier: cubic-bezier(.25, .1, .25, 1);
  display: block;
  position: relative;
  border-radius: 0.2rem;
  box-shadow: 0 0.03rem 0.06rem 0.01rem #00518f29;
  -webkit-box-shadow: 0 0.03rem 0.06rem 0.01rem rgb(0 81 143 / 16%);
  -moz-box-shadow: 0 .03rem .06rem .01rem rgba(0,81,143,.16);
  transition: transform .6s var(--bezier);
  overflow: hidden;
  position: relative;
}

.image-wrapper .image-item .delete-icon {
  position: absolute;
  bottom: 0;
  width: 100%;
  z-index: 100;
  background: rgba(0, 0, 0, 0.6);
  height: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.image-wrapper .image-item .delete-icon image{
  width: 48rpx;
  height: 48rpx;
}

.button-group {
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  margin-top: 32rpx;
}

.button-group button {
  margin-right: 44rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  border: none;
  background-color: #00518f29;
}